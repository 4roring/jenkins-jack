{
  "publisher": "tabeyti",
  "name": "jenkins-jack",
  "displayName": "Jenkins Jack",
  "description": "Jack into your Jenkins to excute pipeline scripts, pull Shared Library step documenation, provide Pipeline step autocompletions, run console groovy scripts, and more!",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.30.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:groovy",
    "onCommand:extension.jenkins-jack"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tabeyti/jenkins-jack.git"
  },
  "contributes": {
    "configuration": [
      {
        "title": "Jenkins Jack configuration",
        "properties": {
          "jenkins-jack.jenkins.uri": {
            "type": "string",
            "default": "127.0.0.1:8080"
          },
          "jenkins-jack.jenkins.username": {
            "type": "string",
            "default": ""
          },
          "jenkins-jack.jenkins.password": {
            "type": "string",
            "default": ""
          },
          "jenkins-jack.jenkins.jobPrefix": {
            "type": "string",
            "default": ""
          },
          "jenkins-jack.browser.buildOutput": {
            "type": "boolean",
            "default": false
          },
          "jenkins-jack.browser.stepsApi": {
            "type": "boolean",
            "default": false
          },
          "jenkins-jack.browser.globalVarsApi": {
            "type": "boolean",
            "default": false
          },
          "jenkins-jack.snippets": {
            "type": "boolean",
            "default": false
          }
        }
      }
    ],
    "keybindings": [
      {
        "command": "extension.jenkins-jack",
        "title": "jenkins-jack",
        "key": "ctrl+alt+j",
        "mac": "ctrl+alt+j",
        "when": "editorTextFocus"
      }
    ],
    "commands": [
      {
        "command": "extension.jenkins-jack",
        "title": "Jenkins Jack"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "npm run compile && node ./node_modules/vscode/bin/test"
  },
  "devDependencies": {
    "typescript": "^3.1.4",
    "vscode": "^1.1.25",
    "tslint": "^5.8.0",
    "xml2js": "0.4.3",
    "jenkins": "^0.25.0",
    "@types/node": "^8.10.25",
    "@types/mocha": "^2.2.42",
    "@types/cheerio": "^0.22.11",
    "@types/jenkins": "^0.23.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/xml2js": "0.4.3"
  },
  "dependencies": {
    "xml2js": "0.4.3",
    "cheerio": "^1.0.0-rc.3",
    "jenkins": "^0.25.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.7"
  }
}
